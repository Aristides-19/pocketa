{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Runner",
      "type": "shell",
      "command": "dart",
      "args": ["run", "build_runner", "build", "--delete-conflicting-outputs"],
      "group": "build",
      "options": { "cwd": "apps/app" }
    },
    {
      "label": "Watch Build Runner",
      "type": "shell",
      "command": "dart",
      "args": ["run", "build_runner", "watch", "--delete-conflicting-outputs"],
      "group": "build",
      "options": { "cwd": "apps/app" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
