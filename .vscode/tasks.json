{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Runner",
      "type": "shell",
      "command": "dart",
      "args": [
        "run",
        "build_runner",
        "build",
        "--delete-conflicting-outputs",
        "--enable-experiment=dot-shorthands"
      ],
      "group": "build",
      "options": {
        "cwd": "app"
      }
    },
    {
      "label": "Watch Build Runner",
      "type": "shell",
      "command": "dart",
      "args": [
        "run",
        "build_runner",
        "watch",
        "--delete-conflicting-outputs",
        "--enable-experiment=dot-shorthands"
      ],
      "group": "build",
      "options": {
        "cwd": "app"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Build Locale Keys and Codegen Loader",
      "type": "shell",
      "command": "dart run easy_localization:generate -S assets/langs -O lib/src/localization -o locale_keys.g.dart -f keys; dart run easy_localization:generate -S assets/langs -O lib/src/localization",
      "group": "build",
      "options": {
        "cwd": "app"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Audit Locale Keys",
      "type": "shell",
      "command": "dart run easy_localization:audit -t assets/langs -s lib/src/localization",
      "group": "test",
      "options": {
        "cwd": "app"
      }
    },
    {
      "label": "Build Generated Code",
      "type": "shell",
      "dependsOn": [
        "Build Runner",
        "Build Locale Keys and Codegen Loader"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Generate SQL Init Script",
      "type": "shell",
      "command": "dart run services/supabase/init.dart",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
